generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]
  posts          Post[] // Posts authored by this user
  comments       Comment[] // Comments made by this user
  likes         Like[] // post liked by this uer

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
  @@index([userId])
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
  @@index([userId])
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
  @@index([identifier])
}



model Post {
  id String @id @default(cuid())
  authorId String
  author        User      @relation(fields: [authorId], references: [id], onDelete: Cascade)

  title String
  slug String @unique
  excerpt String?
  content Json
  featuredImage String?

// Publish Status
  published Boolean @default(false)
  publishedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  

// Relations
  comments Comment[]
  likes Like []


  @@map("post")
  @@index([authorId])
   @@index([published, publishedAt]) // Fast lookup of published posts
  @@index([slug]) // Already unique, but explicit index helps



  

}


model Comment {
  id        Int      @id @default(autoincrement())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  content   String   @db.Text // The actual comment text
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // In case you allow comment editing

  @@map("comment")
  @@index([postId]) // Fast lookup of comments for a post
  @@index([userId]) // Fast lookup of comments by a user
}
model Like {
  id        Int      @id @default(autoincrement())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@unique([postId, userId]) // A user can only like a post once
  @@map("like")
  @@index([postId]) // Fast lookup of likes for a post
  @@index([userId]) // Fast lookup of posts liked by a user
}
